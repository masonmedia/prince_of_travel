---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Prince of Travel | Page Not Found" description="The page you're looking for doesn't exist. Please return to the Prince Collection homepage!">
    <div class="container-fluid px-0">
        <div class="row min-vh-100 p-5" style="background: var(--beige);">
            <div class="col-lg-6 offset-lg-3 d-flex flex-column justify-content-center align-items-center text-center p-5">
                <span class="badge rounded-pill fw-bold bg-secondary py-2 px-3">Page not found</span>
                <h1 class="font-inter fw-900 lh-1 my-2 text-black-50" style="font-size: 22vw; letter-spacing: -4px;">404</h1>
                <p class="fs-4 text-black-50 fw-bold mt-0 mb-3">The page you're looking for doesn't exist. Please return to the Prince of Travel homepage!</p>
                <div class="d-flex">
                    <button onclick="history.back()" class="btn btn-secondary fw-bold rounded-3 px-4 me-1">Back</button>
                    <a href="/">
                        <button class="btn btn-dark fw-bold rounded-3 px-4">Home</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</Layout>

