export const prerender = true;
export async function getStaticPaths() {
    const dealsEntries = await getCollection('deals');
    let data = await fetch("https://pftraveldev.wpengine.com/wp-json/wp/v2/posts?meta_key=category_name&meta_value=deals&_embed&per_page=51");
    let posts = await data.json();
    // const combinedArray = dealsEntries.concat(posts);

//   return combinedArray.map(post => ({
  return posts.map(post => ({
