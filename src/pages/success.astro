---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Prince Collection | Success" description="Thank you for subscribing to the Prince Collection newsletter. Please check your email to confirm your subscription!">
    <div class="container-fluid px-0 bg-world-map">
        <div class="row min-vh-100 p-5">
            <div class="col-lg-8 offset-lg-2 d-flex flex-column justify-content-center align-items-center text-center p-5">
                <div class="p-5 d-flex flex-column justify-content-center align-items-center text-center">
                    <img data-aos="fade-up" data-aos-delay="100" class="logo animate-in py-4 ps-4 pe-3 mt-5 mt-lg-4 rounded-4 bg-pot" style="width: 90px;" src="/images/logos/pot-crown-white.png" alt="Prince of Travel logo" />					
                    <h2 class="display-1 fw-900 mt-3 mb-2 lh-1">Thank you for <span class="text-secondary">subscribing!</span></h2>
                    <p class="fs-4 fw-bold mb-3">Please check your email to confirm your subscription!</p> 
                    <div class="d-flex pt-3">
                        <button onclick="history.back()" class="btn btn-dark fw-bold rounded-3 border-0 px-4 me-1">Back</button>
                        <a href="/">
                            <button class="btn btn-secondary fw-bold rounded-3 border-0 px-4">Home</button>
                        </a>
                    </div>
                </div>


                <!-- <span class="badge rounded-pill fw-bold text-pc-light bg-pc-dark py-2 px-3">Page not found</span> -->
                <!-- <h1 class="font-inter fw-900 lh-1 my-2 text-pc-light" style="font-size: 22vw; letter-spacing: -4px; filter: drop-shadow(2px 2px 5px grey)">404</h1> -->
                <!-- <p class="fs-4 text-black-50 fw-bold mt-0 mb-3">The page you're looking for doesn't exist. Please return to the Prince Collection homepage!</p> -->
                
            </div>
        </div>
    </div>
</Layout>

